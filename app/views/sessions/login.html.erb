<div class="jumbotron">
  <div class="row">
      <div class="col-xs-6 center-block">
        <%= link_to button_tag('Sign in via Github', class: 'btn-auth btn-github'), '/auth/github' %>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          <h1>Log in</h1>
          <%= form_tag login_path do %>
            <p>
            <%= label_tag :email %><br/>
            <%= text_field_tag :email, params[:email] %>
            </p>

            <p>
            <%= label_tag :password %><br/>
            <%= text_field_tag :password %>
            </p>
            <p class="button"><%= submit_tag "Signup" %></p>
            <% end  %>
         </div>
      </div>
   </div>
</div>          
